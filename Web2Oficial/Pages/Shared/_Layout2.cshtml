<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/select-custom.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="main-header">
        <div class="d-flex align-items-center h-100">
            <a href="/" class="logo">
                <i class="bi bi-grid-1x2-fill"></i>
                <span>MP MiPanel</span>
            </a>
        </div>
        <div class="d-flex align-items-center h-100">
            <button id="sidebarToggle" class="btn sidebar-toggle" aria-label="Toggle sidebar">
                <i class="bi bi-list"></i>
            </button>
            <div class="user-profile">
                <div class="dropdown">
                    <button class="btn dropdown-toggle user-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i>
                        Administrador
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Saludo"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="d-flex">
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    <li class="header">NAVEGACIÓN PRINCIPAL</li>
                    <li>
                        <a href="~/Index">
                            <i class="bi bi-house-door"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Concluida">
                            <i class="bi bi-check-circle"></i>
                            <span>Tareas Finalizadas</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Cancelada">
                            <i class="bi bi-x-circle"></i>
                            <span>Tareas Canceladas</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Saludo">
                            <i class="bi bi-person"></i>
                            <span>Perfil</span>
                        </a>
                    </li>
                    <li class="header">CONFIGURACIÓN</li>
                    <li>
                        <a href="~/Privacy">
                            <i class="bi bi-shield-lock"></i>
                            <span>Privacidad</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-gear"></i>
                            <span>Configuración</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-question-circle"></i>
                            <span>Ayuda</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="app-footer">
                <div class="footer-content">
                    <div class="footer-section">
                        <h5 class="footer-title">MP MiPanel</h5>
                        <p class="footer-description">
                            Sistema de gestión de tareas y productividad personal
                        </p>
                    </div>
                    <div class="footer-section">
                        <h5 class="footer-title">Enlaces</h5>
                        <ul class="footer-links">
                            <li><a href="~/Index">Inicio</a></li>
                            <li><a href="~/Concluida">Tareas Finalizadas</a></li>
                            <li><a href="~/Privacy">Política de Privacidad</a></li>
                        </ul>
                    </div>
                    <div class="footer-section">
                        <h5 class="footer-title">Contacto</h5>
                        <ul class="footer-contact">
                            <li><i class="bi bi-envelope me-2"></i>contacto@mipanel.com</li>
                            <li><i class="bi bi-telephone me-2"></i>(+51) 123 456 789</li>
                        </ul>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="footer-copyright">
                        &copy; @DateTime.Now.Year - MP MiPanel - Todos los derechos reservados
                    </div>
                    <div class="footer-social">
                        <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>