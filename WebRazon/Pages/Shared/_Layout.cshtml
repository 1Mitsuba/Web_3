<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRazon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <!-- Barra superior de información -->
    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-none d-md-block">
                <span><i class="fas fa-phone-alt me-2"></i> Llámanos: (123) 456-7890</span>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3 d-none d-md-inline"><i class="fas fa-bell me-1"></i> Notificaciones</span>
                <a href="#" class="me-3"><i class="fas fa-question-circle me-1"></i> Ayuda</a>
            </div>
        </div>
    </div>

    <!-- Header principal con navegación -->
    <header class="header-main">
        <div class="container h-100">
            <div class="d-flex justify-content-between align-items-center h-100">
                <div class="d-flex align-items-center">
                    <!-- Botón de toggle para sidebar (visible en todos los tamaños) -->
                    <button id="sidebarToggle" class="btn me-2" type="button">
                        <i class="fas fa-bars"></i>
                    </button>

                    <!-- Logo y marca -->
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <i class="fas fa-tasks"></i>TaskManager
                    </a>
                </div>

                <!-- Botones de autenticación (desktop) -->
                <div class="d-none d-lg-flex align-items-center">
                    <a href="#" class="btn auth-btn login-btn">Iniciar Sesión</a>
                    <a href="#" class="btn auth-btn register-btn">Registrarse</a>
                </div>

                <!-- Iconos de usuario (visible en todos los tamaños) -->
                <div class="d-flex align-items-center">
                    <!-- Icono de notificaciones -->
                    <a href="#" class="icon-btn me-2 d-lg-none">
                        <i class="fas fa-bell"></i>
                        <span class="notification-count">2</span>
                    </a>

                    <!-- Menú desplegable de usuario -->
                    <div class="dropdown">
                        <a class="icon-btn" href="#" role="button" id="userDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fs-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#">Mi Perfil</a></li>
                            <li><a class="dropdown-item" href="#">Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Barra de búsqueda -->
    <div class="search-bar">
        <div class="container">
            <form class="d-flex">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Buscar tareas..." aria-label="Buscar">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>

    <!-- Contenedor principal -->
    <div class="main-container">
        <!-- Barra lateral de navegación -->
        <aside class="sidebar" id="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-page="/Index">
                        <i class="fas fa-home"></i> Inicio
                    </a>
                </li>

                <!-- Sección de tareas -->
                <li class="sidebar-category-title mt-3">TAREAS</li>
                <li class="nav-item">
                    <a class="nav-link sidebar-dropdown-toggle" data-bs-toggle="collapse" href="#tasksSubmenu"
                        role="button" aria-expanded="false" aria-controls="tasksSubmenu">
                        <i class="fas fa-clipboard-list"></i> Tareas pendientes
                    </a>
                    <div class="collapse sidebar-dropdown-menu" id="tasksSubmenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Hoy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Esta semana</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Este mes</a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-check-circle"></i> Tareas completadas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-ban"></i> Tareas canceladas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-star"></i> Tareas importantes
                    </a>
                </li>

                <!-- Sección de soporte -->
                <li class="sidebar-category-title mt-3">SOPORTE</li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-question-circle"></i> Ayuda
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-envelope"></i> Contacto
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Privacy">
                        <i class="fas fa-shield-alt"></i> Privacidad
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Contenido principal -->
        <div class="content" id="content">
            <main role="main">
                @RenderBody()
            </main>

            <!-- Sección de newsletter -->
            <section class="newsletter-section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <h2>Suscríbete a Actualizaciones</h2>
                            <p class="mb-4">Recibe notificaciones sobre tus tareas y recordatorios importantes.</p>

                            <form>
                                <div class="row justify-content-center">
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="email" class="form-control newsletter-input"
                                                placeholder="Tu correo electrónico">
                                            <button class="btn newsletter-btn" type="button">Suscribirme</button>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                Al suscribirte, aceptas nuestra
                                                <a href="#" class="text-decoration-underline">Política de Privacidad</a>.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <!-- Columna 1 -->
                    <div class="col-md-4 col-6 mb-4 mb-md-0">
                        <h5>Gestión de Tareas</h5>
                        <ul>
                            <li><a href="#">Tareas Pendientes</a></li>
                            <li><a href="#">Tareas Completadas</a></li>
                            <li><a href="#">Tareas Importantes</a></li>
                            <li><a href="#">Calendario</a></li>
                            <li><a href="#">Categorías</a></li>
                        </ul>
                    </div>

                    <!-- Columna 2 -->
                    <div class="col-md-4 col-6 mb-4 mb-md-0">
                        <h5>Ayuda</h5>
                        <ul>
                            <li><a href="#">Centro de Ayuda</a></li>
                            <li><a href="#">Tutorial</a></li>
                            <li><a href="#">Preguntas Frecuentes</a></li>
                            <li><a href="#">Soporte Técnico</a></li>
                            <li><a href="#">Contáctanos</a></li>
                        </ul>
                    </div>

                    <!-- Columna 3 -->
                    <div class="col-md-4 mt-4 mt-md-0">
                        <h5>Conéctate con nosotros</h5>
                        <div class="social-icons mb-3">
                            <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                            <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                            <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                            <a href="#" title="YouTube"><i class="fab fa-youtube"></i></a>
                        </div>
                        <p>Descarga nuestra aplicación móvil:</p>
                        <div class="d-flex mt-2">
                            <a href="#" class="me-2"><i class="fab fa-apple fa-2x"></i></a>
                            <a href="#"><i class="fab fa-android fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="copyright">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <p class="mb-0">&copy; @DateTime.Now.Year - TaskManager - Todos los derechos reservados
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <a href="#" class="me-3">Términos de Servicio</a>
                        <a href="#">Política de Privacidad</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>