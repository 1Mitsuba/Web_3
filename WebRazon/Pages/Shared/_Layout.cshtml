<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRazon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- jQuery UI CSS -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
</head>

<body>
    <!-- Barra superior de información -->
    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-none d-md-block">
                <span><i class="fas fa-phone-alt me-2"></i> Llámanos: (123) 456-7890</span>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3 d-none d-md-inline"><i class="fas fa-bell me-1"></i> Notificaciones</span>
                <a href="#" class="me-3"><i class="fas fa-question-circle me-1"></i> Ayuda</a>
            </div>
        </div>
    </div>

    <!-- Header principal con navegación -->
    <header class="header-main">
        <div class="container h-100">
            <div class="d-flex justify-content-between align-items-center h-100">
                <div class="d-flex align-items-center">
                    <!-- Botón de toggle para sidebar (visible en todos los tamaños) -->
                    <button id="sidebarToggle" class="btn me-2" type="button">
                        <i class="fas fa-bars"></i>
                    </button>

                    <!-- Logo y marca -->
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <i class="fas fa-tasks"></i>TaskManager
                    </a>
                </div>

                <!-- Botones de autenticación (desktop) -->
                <div class="d-none d-lg-flex align-items-center">
                    <a href="#" class="btn auth-btn login-btn">Iniciar Sesión</a>
                    <a href="#" class="btn auth-btn register-btn">Registrarse</a>
                </div>

                <!-- Iconos de usuario (visible en todos los tamaños) -->
                <div class="d-flex align-items-center">
                    <!-- Icono de notificaciones -->
                    <a href="#" class="icon-btn me-2 d-lg-none">
                        <i class="fas fa-bell"></i>
                        <span class="notification-count">2</span>
                    </a>

                    <!-- Menú desplegable de usuario -->
                    <div class="dropdown">
                        <a class="icon-btn" href="#" role="button" id="userDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fs-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#">Mi Perfil</a></li>
                            <li><a class="dropdown-item" href="#">Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Barra de búsqueda -->
    <div class="search-bar">
        <div class="container">
            <form class="d-flex" id="search-form" onsubmit="return false;">
                <div class="input-group">
                    <input id="search-tasks" class="form-control" type="search" 
                           placeholder="Buscar tareas por nombre o descripción..." 
                           aria-label="Buscar">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @{
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        var isTasksPage = currentPage != null && (
            currentPage == "/Tasks/Today" || 
            currentPage == "/Tasks/Week" || 
            currentPage == "/Tasks/Month"
        );
    }

    <!-- Contenedor principal -->
    <div class="main-container">
        <!-- Barra lateral de navegación -->
        <aside class="sidebar" id="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentPage == "/Index" ? "active" : "")" 
                       asp-page="/Index">
                        <i class="fas fa-home"></i> Inicio
                    </a>
                </li>

                <!-- Sección de tareas -->
                <li class="sidebar-category-title mt-3">TAREAS</li>
                <li class="nav-item">
                    <a class="nav-link sidebar-dropdown-toggle @(isTasksPage ? "active" : "")" data-bs-toggle="collapse" href="#tasksSubmenu"
                        role="button" aria-expanded="@(isTasksPage ? "true" : "false")" aria-controls="tasksSubmenu">
                        <i class="fas fa-clipboard-list"></i> Tareas pendientes
                    </a>
                    <div class="collapse @(isTasksPage ? "show" : "") sidebar-dropdown-menu" id="tasksSubmenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link @(currentPage == "/Tasks/Today" ? "active" : "")" 
                                   asp-page="/Tasks/Today">
                                    <i class="fas fa-calendar-day me-2"></i> Hoy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentPage == "/Tasks/Week" ? "active" : "")" 
                                   asp-page="/Tasks/Week">
                                    <i class="fas fa-calendar-week me-2"></i> Esta semana
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentPage == "/Tasks/Month" ? "active" : "")" 
                                   asp-page="/Tasks/Month">
                                    <i class="fas fa-calendar-alt me-2"></i> Este mes
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentPage == "/Tasks/Completed" ? "active" : "")" 
                       asp-page="/Tasks/Completed">
                        <i class="fas fa-check-circle"></i> Tareas completadas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentPage == "/Tasks/Canceled" ? "active" : "")" 
                       asp-page="/Tasks/Canceled">
                        <i class="fas fa-ban"></i> Tareas canceladas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-star"></i> Tareas importantes
                    </a>
                </li>

                <!-- Sección de soporte -->
                <li class="sidebar-category-title mt-3">SOPORTE</li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-question-circle"></i> Ayuda
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-envelope"></i> Contacto
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentPage == "/Privacy" ? "active" : "")" 
                       asp-page="/Privacy">
                        <i class="fas fa-shield-alt"></i> Privacidad
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Contenido principal -->
        <div class="content" id="content">
            <main role="main">
                @RenderBody()
            </main>

            <!-- Sección de newsletter -->
            <section class="newsletter-section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <h2>Suscríbete a Actualizaciones</h2>
                            <p class="mb-4">Recibe notificaciones sobre tus tareas y recordatorios importantes.</p>

                            <form>
                                <div class="row justify-content-center">
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input type="email" class="form-control newsletter-input"
                                                placeholder="Tu correo electrónico">
                                            <button class="btn newsletter-btn" type="button">Suscribirme</button>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                Al suscribirte, aceptas nuestra
                                                <a href="#" class="text-decoration-underline">Política de Privacidad</a>.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Footer simplificado -->
    <footer class="simple-footer">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year - Task Manager - <a asp-area="" asp-page="/Privacy">Privacy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>