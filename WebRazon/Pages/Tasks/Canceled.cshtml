@page
@model WebRazon.Pages.Tasks.CanceledModel
@{
    ViewData["Title"] = "Tareas Canceladas";
}

<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <strong>TAREAS CANCELADAS</strong>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <strong>Lista de Tareas Canceladas</strong>
            </div>
            <div class="card-body">
                @if (Model.Tasks.Count == 0)
                {
                    <div class="alert alert-info">
                        No hay tareas canceladas para mostrar.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nombre Tarea</th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Estado</th>
                                    <th>ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in Model.Tasks)
                                {
                                    <tr>
                                        <td>@task.Nombre</td>
                                        <td>
                                            @if (task.FechaVencimiento.HasValue)
                                            {
                                                @task.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-danger">Cancelada</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-page-handler="Reactivate" asp-route-id="@task.Id" 
                                                   class="btn btn-primary btn-sm" title="Reactivar">
                                                    <i class="fas fa-redo"></i>
                                                </a>
                                                <a asp-page="/TaskDetail" asp-route-id="@task.Id" 
                                                   asp-route-returnPage="/Tasks/Canceled"
                                                   class="btn btn-primary btn-sm" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-page-handler="Delete" asp-route-id="@task.Id"
                                                   class="btn btn-danger btn-sm" title="Eliminar"
                                                   onclick="return confirm('¿Está seguro de que desea eliminar esta tarea?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}