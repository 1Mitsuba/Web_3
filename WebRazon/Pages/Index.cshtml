@page
@model IndexModel
@{
    ViewData["Title"] = "Gestor de Tareas";
}

<!-- Sección de bienvenida -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Bienvenido a TaskManager</h5>
            </div>
            <div class="card-body">
                <p class="lead">Organiza tus tareas, mejora tu productividad y lleva un seguimiento de tus proyectos.</p>
                <p>Selecciona una categoría en el menú lateral para ver tus tareas o crea una nueva tarea abajo.</p>
            </div>
        </div>
    </div>
</div>

<!-- Panel para crear nueva tarea -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Crear nueva tarea</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="taskName" class="form-label">Nombre de la tarea</label>
                                <input type="text" class="form-control" id="taskName" asp-for="TaskName" required>
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="dueDate" class="form-label">Fecha de vencimiento</label>
                                <input type="date" class="form-control" id="dueDate" asp-for="DueDate">
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Descripción</label>
                        <textarea class="form-control" id="description" asp-for="Description" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Tarea</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Resumen de tareas -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tareas para hoy</h5>
                    <a asp-page="/Tasks/Today" class="btn btn-sm btn-light">Ver todas</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model._taskService.GetTasksForToday().Count == 0)
                {
                    <p class="text-muted">No hay tareas programadas para hoy.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var task in Model._taskService.GetTasksForToday().Take(3))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@task.Nombre</span>
                                @if (task.EstaCompletada)
                                {
                                    <span class="badge bg-success rounded-pill">Completada</span>
                                }
                                else
                                {
                                    <a asp-page="/TaskDetail" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tareas completadas</h5>
                    <a asp-page="/Tasks/Completed" class="btn btn-sm btn-light">Ver todas</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model._taskService.GetCompletedTasks().Count == 0)
                {
                    <p class="text-muted">No hay tareas completadas.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var task in Model._taskService.GetCompletedTasks().Take(3))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@task.Nombre</span>
                                <span class="badge bg-success rounded-pill">Completada</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Esta semana</h5>
                    <a asp-page="/Tasks/Week" class="btn btn-sm btn-light">Ver todas</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model._taskService.GetTasksForThisWeek().Count == 0)
                {
                    <p class="text-muted">No hay tareas programadas para esta semana.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var task in Model._taskService.GetTasksForThisWeek().Take(3))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@task.Nombre</span>
                                <span>@(task.FechaVencimiento?.ToString("dd/MM/yyyy"))</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Este mes</h5>
                    <a asp-page="/Tasks/Month" class="btn btn-sm btn-light">Ver todas</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model._taskService.GetTasksForThisMonth().Count == 0)
                {
                    <p class="text-muted">No hay tareas programadas para este mes.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var task in Model._taskService.GetTasksForThisMonth().Take(3))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@task.Nombre</span>
                                <span>@(task.FechaVencimiento?.ToString("dd/MM/yyyy"))</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
