@page
@model WebRazon.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container my-5">
    <h1 class="mb-4">Shopping Cart</h1>

    <div class="row">
        <div class="col-lg-8">
            <!-- Cart Items -->
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Items in Your Cart (3)</h5>
                    
                    <!-- Cart Item 1 -->
                    <div class="row mb-4 pb-4 border-bottom">
                        <div class="col-md-2 mb-3 mb-md-0">
                            <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid rounded">
                        </div>
                        <div class="col-md-10">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">Wireless Headphones</h5>
                                    <p class="text-muted small mb-1">Color: Black</p>
                                    <p class="text-primary small mb-3">In Stock</p>
                                </div>
                                <button type="button" class="btn-close" aria-label="Remove item"></button>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="input-group input-group-sm" style="width: 120px">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <div class="fw-bold">$89.99</div>
                            </div>
                        </div>
                    </div>

                    <!-- Cart Item 2 -->
                    <div class="row mb-4 pb-4 border-bottom">
                        <div class="col-md-2 mb-3 mb-md-0">
                            <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid rounded">
                        </div>
                        <div class="col-md-10">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">Bluetooth Speaker</h5>
                                    <p class="text-muted small mb-1">Color: Blue</p>
                                    <p class="text-primary small mb-3">In Stock</p>
                                </div>
                                <button type="button" class="btn-close" aria-label="Remove item"></button>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="input-group input-group-sm" style="width: 120px">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <div class="fw-bold">$49.99</div>
                            </div>
                        </div>
                    </div>

                    <!-- Cart Item 3 -->
                    <div class="row">
                        <div class="col-md-2 mb-3 mb-md-0">
                            <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid rounded">
                        </div>
                        <div class="col-md-10">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">Wireless Charging Pad</h5>
                                    <p class="text-muted small mb-1">Color: White</p>
                                    <p class="text-primary small mb-3">In Stock</p>
                                </div>
                                <button type="button" class="btn-close" aria-label="Remove item"></button>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="input-group input-group-sm" style="width: 120px">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <div class="fw-bold">$29.99</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Continue Shopping and Clear Cart -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                </a>
                <button class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt me-2"></i> Clear Cart
                </button>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>$169.97</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Estimated Tax:</span>
                        <span>$13.60</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total:</strong>
                        <strong>$183.57</strong>
                    </div>
                    
                    <!-- Promo Code -->
                    <div class="mb-4">
                        <label for="promoCode" class="form-label">Promo Code</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="promoCode" placeholder="Enter code">
                            <button class="btn btn-outline-secondary" type="button">Apply</button>
                        </div>
                    </div>
                    
                    <!-- Checkout Button -->
                    <button class="btn btn-primary w-100 mb-3">
                        <i class="fas fa-lock me-2"></i> Proceed to Checkout
                    </button>
                    
                    <!-- Payment Methods -->
                    <div class="text-center small text-muted">
                        <p class="mb-2">Secure Payment Methods</p>
                        <div>
                            <i class="fab fa-cc-visa fa-2x me-2"></i>
                            <i class="fab fa-cc-mastercard fa-2x me-2"></i>
                            <i class="fab fa-cc-amex fa-2x me-2"></i>
                            <i class="fab fa-cc-paypal fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Need Help -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Need Help?</h5>
                    <p class="small">Our customer service is available 24/7</p>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-phone-alt me-2 text-primary"></i>
                        <span>(123) 456-7890</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-envelope me-2 text-primary"></i>
                        <span>support@shoprazon.com</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-comment-alt me-2 text-primary"></i>
                        <a href="#" class="text-decoration-none">Live Chat</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recommended Products -->
    <section class="mt-5">
        <h3 class="mb-4">You Might Also Like</h3>
        <div class="row">
            <!-- Product 1 -->
            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h6 class="card-title">Smart Watch</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger fw-bold">$199.99</span>
                            </div>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <button class="btn btn-primary w-100">Add to Cart</button>
                    </div>
                </div>
            </div>
            <!-- Product 2 -->
            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h6 class="card-title">Wireless Earbuds</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger fw-bold">$59.99</span>
                            </div>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <button class="btn btn-primary w-100">Add to Cart</button>
                    </div>
                </div>
            </div>
            <!-- Product 3 -->
            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h6 class="card-title">Power Bank</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger fw-bold">$39.99</span>
                            </div>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <button class="btn btn-primary w-100">Add to Cart</button>
                    </div>
                </div>
            </div>
            <!-- Product 4 -->
            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h6 class="card-title">Phone Case</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger fw-bold">$19.99</span>
                            </div>
                            <div class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <button class="btn btn-primary w-100">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>