@page "{id:int}"
@model WebApplication1.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1 class="page-title">Eliminar Tarea</h1>

<div class="alert alert-danger mb-4">
    <div class="d-flex">
        <div class="me-3">
            <i class="fas fa-exclamation-triangle fs-3"></i>
        </div>
        <div>
            <h5 class="mb-1">¿Estás seguro de que deseas eliminar esta tarea?</h5>
            <p class="mb-0">Esta acción no se puede deshacer.</p>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Detalles de la tarea</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3 text-muted">Título:</div>
            <div class="col-md-9 fw-medium">@Model.Task.Title</div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Task.Description))
        {
            <div class="row mb-3">
                <div class="col-md-3 text-muted">Descripción:</div>
                <div class="col-md-9">@Model.Task.Description</div>
            </div>
        }
        
        <div class="row mb-3">
            <div class="col-md-3 text-muted">Fecha límite:</div>
            <div class="col-md-9">
                @if (Model.Task.DueDate.HasValue)
                {
                    <span>
                        <i class="fas fa-calendar-alt me-1"></i>
                        @Model.Task.DueDate.Value.ToString("dd/MM/yyyy")
                    </span>
                }
                else
                {
                    <span class="text-muted">No establecida</span>
                }
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-3 text-muted">Estado:</div>
            <div class="col-md-9">
                <span class="status-badge @(Model.Task.IsCompleted ? "completed" : "pending")">
                    @(Model.Task.IsCompleted ? "Completada" : "Pendiente")
                </span>
            </div>
        </div>
        
        @if (Model.Task.IsUrgent)
        {
            <div class="row">
                <div class="col-md-3 text-muted">Prioridad:</div>
                <div class="col-md-9">
                    <span class="status-badge urgent">
                        <i class="fas fa-exclamation-circle me-1"></i>
                        Urgente
                    </span>
                </div>
            </div>
        }
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Task.Id" />
    <div class="d-flex justify-content-between">
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-danger">Eliminar tarea</button>
    </div>
</form>